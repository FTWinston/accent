<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Accent tool</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="menu">
        @Html.ActionLink("Accent tool", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
    </div>
    <div class="form">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/site")
    @RenderSection("scripts", required: false)
</body>
</html>
